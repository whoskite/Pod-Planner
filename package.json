    "next": "^14.1.0",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-swipeable": "^7.0.2",
    "typescript": "^5.7.2",
    "uuid": "^11.0.5",
    "viem": "^2.21.57"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
